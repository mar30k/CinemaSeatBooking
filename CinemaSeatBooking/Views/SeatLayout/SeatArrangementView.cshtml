@model CinemaSeatBooking.Models.SeatLayout
@{
    string formattedDate = DateTime.Now.ToString("MMM-d h.mmtt");
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
    .cell {
        width: 20px;  /* Set a fixed width for the cells */
        height: 20px; /* Set a fixed height for the cells */
        padding: 2px; /* Set padding for the cells */
    }
</style>
</head>
    <body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <div class="d-flex justify-content-between align-items-center w-100 ml-5">
                    <div class="Popcorn ">
                        <h4>Seats</h4>
                    </div>
                    <div>
                        <div class="food-and-drink" style="display: inline-block; ">
                            <a class="custom-btn btn btn-primary" asp-controller="Home" asp-action="Index" role="button">Movies</a>
                        </div>
                        <div class="today-date" style="display: inline-block; margin-top: 10px; margin-right: 10px;">
                            <p style="margin-left:10px;">@formattedDate</p>
                        </div>
                    </div>
                </div>
            </div>
        </nav>
    </header>
        <div class="container">
            @if (Model != null)
            {
                <div class="container">
                </div>
                @if (Model.Seats != null && Model.Seats.Any())
                {
                    <h3>Seats:</h3>
                    <style>
                        table {
                            border-collapse: collapse;
                        }

                        td, th {
                            border: 1px solid rgba(0,0,0,0);
                            text-align: center; /* Center the content within cells */
                        }
                    </style>

                <div class="table-responsive table-sm">
                    <table class="table table-sm">
                        @for (int y = Model.MaxY; y >= 1; y--)
                        {
                            <tr>
                                @for (int x = 1; x <= Model.MaxX; x++)
                                {
                                    <td style="width: 30px; height: 30px; padding: 0;">
                                        @if (Model.Seats.Any(seat => seat.X == x && seat.Y == y && !string.IsNullOrWhiteSpace(seat.Name)))
                                        {
                                            var seat = Model.Seats.First(seat => seat.X == x && seat.Y == y);
                                            <div style="
                                display: inline-block;
                                width: 100%;
                                height: 100%;
                                overflow: hidden;">
                                                <p style="
                                    display: flex;
                                    align-items: center;
                                    justify-content: center;
                                    margin: 0;
                                    font-size: 10px;
                                    font-weight: 400;
                                    background: #fff;
                                    border: 1px solid #1ea83c;
                                    border-radius: 2px;
                                    color: #1ea83c;
                                    width: 100%;
                                    height: 100%;
                                                    ">@seat.Name</p>
                                            </div>
                                        }
                                        else
                                        {
                                            <div style="
                                width: 100%;
                                height: 100%;
                                overflow: hidden;">
                                                <p style="
                                    display: flex;
                                    align-items: center;
                                    justify-content: center;
                                    margin: 0;
                                    font-size: 10px;
                                    font-weight: 400;
                                    background: #fff;
                                    width: 100%;
                                    height: 100%;
                                                    "></p>
                                            </div>
                                        }
                                    </td>
                                }
                            </tr>
                        }
                    </table>
                </div>
                }
                else
                {
                    <p>No seats available.</p>
                }
            }
            else
            {
                <p>No seat arrangement data available.</p>
            }

        </div>
    </body>
</html>
<!-- Your HTML markup for displaying the seat arrangement -->
